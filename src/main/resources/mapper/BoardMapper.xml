<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybaits.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="me.sisyphusj.community.app.board.mapper.BoardMapper">

    <insert id="insertBoard" parameterType="me.sisyphusj.community.app.board.domain.BoardVO">
        insert into board (user_id, title, content)
        values (#{userId}, #{title}, #{content})
    </insert>

    <select id="selectBoardSummaryList" resultMap="boardSummaryList">
        select board_id, u.name, title, created_at
        from board b,
             user u
        where b.user_id = u.user_id
        order by created_at desc
    </select>

    <resultMap id="boardSummaryList" type="me.sisyphusj.community.app.board.domain.BoardSummaryVO">
        <id property="boardId" column="board.board_id"/>
        <result property="author" column="user.name"/>
        <result property="title" column="board.title"/>
        <result property="createdDate" column="board.created_at"/>
    </resultMap>

</mapper>